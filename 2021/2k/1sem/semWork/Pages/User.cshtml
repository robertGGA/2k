@page
@model semWork.Pages.Users.UserModel

@section Styles {
    <link rel="stylesheet" href="./css/profilePage.css" />
}

@{ ViewData["Title"] = "Profile"; }



<div class="first_container">

    <h1>
        Профиль
    </h1>

    <div class="profile_container">
        <div class="row_of_profile">
            <div>
                <img src="@Model.user.photo" width="300px" height="300px" alt="prf">

                <form class="image_loader" method="post" enctype="multipart/form-data">
                    <input type="file" asp-for="Photo" />
                    <input type="submit" class="img_submit" />
                </form>
            </div>
            <div class="container-info">
                <div class="container-info-column">
                    <h2 class="username_title">
                        @Model.name
                    </h2>

                    <div class="user_info">
                        <p>
                            <b> Полных лет: @Model.age
                        </p>
                    </div>
                </div>

                <form asp-page-handler="LogOut">
                    <button class="button_logout">
                        Выйти
                    </button>
                </form>

                <a asp-page="/Settings" > 
                    Настройки
                </a>



            </div>
        </div>
        <div class="courses_container">
            @if (Model.Courses != null)
            {
    <h2>
        Любимые курсы
    </h2>

    <ul class="li_courses">
        @foreach (var course in Model.Courses)
        {
                        <li class="item_courses">
                            <img src="@course.photo" width="50px" height="50px" />
                            <div class="column_item">
                                <a style="color: black" asp-area="" asp-page="/Course" asp-route-id="@course.course_id">
                                    @course.name;
                                </a>
                                <p class="item_course_desc">
                                    @course.description;
                                </p>
                            </div>
                        </li>
        }
    </ul> }
                else
                {
    <h2>
        Нет любимых курсов
    </h2>}

        </div>
    </div>
</div>
