@page
@model semWork.Pages.CoursesListModel
@{ ViewData["Title"] = "Courses"; }
@section Styles {
    <link rel="stylesheet" href="./css/ListOfCourses.css">
}
<script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>

<div class="first_container">
    <h1>
        Курсы
    </h1>

    <div class="container_of_courses">
        <div class="searcher_wrapper">
            <form class="searcher">
                <i class="" aria-hidden="true"></i>
                <input class="search" type="text" placeholder="Введите имя курса">


                <input class="search_button" type="submit" value="Поиск">
            </form>

            <ul class="course_list">
                @foreach (var course in Model.courses)
                {
            <li class="course" id="@course.course_id">

                <img src="@course.photo" height="150" width="140" />
                <div class="course_container">

                    <h2>
                        @course.name;
                    </h2>

                    <div class="rate">
                        Балл курса:
                    </div>


                    <p class="description_course">
                        @course.description;
                    </p>

                    
                        <button id="to_course" class="to_course">
                            Перейти
                        </button>
                    

                </div>
            </li>}

                <script>
                    document.getElementById('to_course').addEventListener('click', () => {
                        var xhr = new XMLHttpRequest();
                        xhr.onreadystatechange = function () {
                            if (this.readyState == 4 && this.status == 200) {
                                document.getElementById('grid').innerHTML = this.responseText;
                            }
                        };
                        console.log("works");
                    });
                </script>



            </ul>
        </div>
    </div>

